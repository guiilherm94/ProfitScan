# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role (para criar usuários via webhook)
# ⚠️ NUNCA exponha essa chave no frontend!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Resend (Email Service)
# Crie uma conta gratuita em https://resend.com
RESEND_API_KEY=re_your-resend-api-key
RESEND_FROM_EMAIL=ProfitScan AI <onboarding@resend.dev>

# App URL (para links no email)
NEXT_PUBLIC_APP_URL=https://profitscan.ai

# CartPanda Webhook Secret (opcional, para validação extra)
CARTPANDA_WEBHOOK_SECRET=your-webhook-secret
